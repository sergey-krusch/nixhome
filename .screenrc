altscreen on

hardstatus off
hardstatus alwayslastline
hardstatus string '%{kG}%-Lw %{gk}%n-%f %t %{-} %+Lw'

vbell off

termcapinfo xterm* ti@:te@
termcapinfo xterm* 'hs:ts=\E]2;:fs=07:ds=\E]2;screen07'

bindkey "^[[6;5~" next
bindkey "^[[5;5~" prev
bindkey "^[[27;6;84~" screen
bindkey "^[[1;5S" eval kill
